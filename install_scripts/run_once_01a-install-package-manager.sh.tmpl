#!/bin/sh

. "$(chezmoi source-path)/helpers"

echo ''

{{ if eq .chezmoi.os "linux" -}}

info 'ðŸ“‚ Updating apt registry'
sudo apt update
sudo apt install -y curl git

if ! [ -x "$(command -v mise)" ]; then
	info 'ðŸ’» Installing mise'
	curl https://mise.run | sh
	success 'mise'
