#!/bin/sh

. "$(chezmoi source-path)/helpers"

echo ''

info 'ğŸ Installing python prereqs'
# This fixes the "No module named '_ctypes'" error when using aws cli
sudo apt-get install libffi-dev
success 'python prereqs'

info 'ğŸ Installing python'
#{{ if eq .chezmoi.os "darwin" -}}
# export ASDF_PYTHON_PATCH_URL="https://github.com/python/cpython/commit/8ea6353.patch?full_index=1"
#{{ end -}}
mise use --global python@3.12.3
success 'python'

if ! [ -x "$(command -v uv)" ]; then
info 'ğŸ Installing uv'
curl -LsSf https://astral.sh/uv/install.sh | sh
success 'uv'
else
    info 'ğŸ uv already installed, updating'
    uv self update
    skip 'uv'
fi

echo ''
